<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDietActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout2"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:navigationIcon="@drawable/back_icon"
            app:title="" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="29dp"
        android:text="Food Name" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="206dp"
        android:text="Proteins in cal" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="299dp"
        android:text="Fats in cal" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="114dp"
        android:text="Carbohydrates in cal" />

    <AutoCompleteTextView
        android:id="@+id/foodName"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="54dp"
        android:completionThreshold="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/CValue"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_below="@+id/foodName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="51dp" />

    <TextView
        android:id="@+id/CValue2"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CValue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/CValue3"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CValue2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="51dp" />

    <TextView
        android:id="@+id/CValue4"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CValue3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CValue4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add_icon" />

        <TextView
            android:id="@+id/QuantityValue"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/remove_icon" />

    </LinearLayout>

    <Button
        android:id="@+id/addDietButton"
        android:layout_width="343dp"
        android:layout_height="67dp"
        android:layout_below="@+id/CValue4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#0ED6B9"
        android:text="ADD"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"></Button>


</RelativeLayout>